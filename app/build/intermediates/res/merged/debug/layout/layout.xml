<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@drawable/gradient_bg"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"


        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        >

        <TextView
            android:background="#069c88"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lapor Kecelakaan"
            android:textSize="10pt"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btnCamera"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture Image" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="image"
            android:visibility="gone" />

        <EditText
            android:singleLine="true"
            android:id="@+id/etdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ketik judul. (eg: Tabrakan bus dan motor)"/>

        <EditText
            android:id="@+id/etalamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ketik lokasi. (eg: Jl. Hr. subrantas panam)"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="4"
            android:scrollHorizontally="false"
            />


        <!--<EditText-->
            <!--android:id="@+id/etfoto"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="Foto"/>-->

        <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:inputType="date"-->
        <!--android:ems="10"-->
        <!--android:id="@+id/editText"-->
        <!--android:hint="Tanggal"/>-->

        <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:inputType="time"-->
        <!--android:ems="10"-->
        <!--android:id="@+id/editText2"-->
        <!--android:hint="Waktu"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"/>

            <Button
                android:id="@+id/btclear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:text="null"
                android:id="@+id/tvlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/tvlat2"
                android:layout_alignStart="@+id/tvlat2"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/tvlat2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lat : "
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvlng2"
                android:text="lng :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvlat"
                android:layout_alignBottom="@+id/tvlat"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="null"
                android:id="@+id/tvlng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvlng2"
                android:layout_toEndOf="@+id/tvlng2" />

        </RelativeLayout>

    </LinearLayout>


</ScrollView>
